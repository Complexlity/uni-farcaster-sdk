{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      },
      "style": {
        "useBlockStatements": "off"
      }
    }
  },
  "files": {
    "ignore": [
      "node_modules",
      "playground.*",
      "playground*.*",
      "dist",
      ".pnp.*",
      ".vscode",
      "package.json"
    ]
  }
}
